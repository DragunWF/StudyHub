<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginbase"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181818">


    <ImageView
        android:id="@+id/loginLogo"
        android:layout_width="0dp"
        android:layout_height="258dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="684dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/login_form_cardcontainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginLogo">

        <ImageView
            android:id="@+id/loginProfile"
            android:layout_width="167dp"
            android:layout_height="178dp"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/profile" />

        <EditText
            android:id="@+id/inputUsername"
            android:layout_width="342dp"
            android:layout_height="62dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/input_username"
            android:ems="10"
            android:fontFamily="@font/inria_light"
            android:forceHasOverlappingRendering="false"
            android:inputType="text"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginProfile" />

        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="342dp"
            android:layout_height="62dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_password"
            android:ems="10"
            android:fontFamily="@font/inria_light"
            android:forceHasOverlappingRendering="false"
            android:inputType="textPassword"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputUsername" />

        <Button
            android:id="@+id/logInBtn"
            android:layout_width="342dp"
            android:layout_height="62dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/login_btn"
            android:fontFamily="@font/inria_bold"
            android:text="LOG IN"
            android:textSize="21sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputPassword" />

        <TextView
            android:id="@+id/notRegisteredText"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inria_light"
            android:gravity="top"
            android:text="Not registered yet?"
            android:textColor="#EE0909"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logInBtn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


