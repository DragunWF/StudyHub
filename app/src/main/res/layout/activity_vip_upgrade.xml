<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181818"
    tools:context=".activities.VipUpgradeActivity">

    <ImageView
        android:id="@+id/vipBackBtn"
        android:layout_width="74.5dp"
        android:layout_height="74.5dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toStartOf="@+id/vipLogo"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_btn" />

    <ImageView
        android:id="@+id/vipLogo"
        android:layout_width="222.5dp"
        android:layout_height="200.5dp"
        android:layout_marginEnd="156dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="444dp"
        android:layout_height="226.5dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vipLogo"
        app:srcCompat="@drawable/vip_benefits_no_btn" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="204.5dp"
        android:layout_height="175.5dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/vip_monthly_price" />

    <ImageView
        android:layout_width="204.5dp"
        android:layout_height="175.5dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="48dp"
        android:src="@drawable/vip_yearly_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="444dp"
        android:layout_height="244dp"
        android:layout_marginTop="244dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/vip_payment_container" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="141dp"
        android:layout_height="160dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.642">

        <RadioButton
            android:id="@+id/subsRBtnMonthly"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/r_btn_payment"
            android:fontFamily="@font/inria_reg"
            android:text="Monthly"
            android:textAlignment="gravity"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/subsRBtnYearly"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/r_btn_payment"
            android:fontFamily="@font/inria_reg"
            android:text="Yearly"
            android:textAlignment="gravity"
            android:textSize="16sp" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="141dp"
        android:layout_height="160dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toStartOf="@+id/radioGroup"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.642">

        <RadioButton
            android:id="@+id/subsRBtnGcash"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/r_btn_payment"
            android:fontFamily="@font/inria_reg"
            android:text="Gcash"
            android:textAlignment="gravity"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/subsRBtnMaya"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/r_btn_payment"
            android:fontFamily="@font/inria_reg"
            android:text="Maya"
            android:textAlignment="gravity"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/subsRBtnCard"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:background="@drawable/r_btn_payment"
            android:fontFamily="@font/inria_reg"
            android:text="Card"
            android:textAlignment="gravity"
            android:textSize="16sp" />
    </RadioGroup>

    <Button
        android:id="@+id/subsVipBtn"
        android:layout_width="444dp"
        android:layout_height="84dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/subs_btn"
        android:fontFamily="@font/inria_bold"
        android:text="SUBSCRIBE NOW"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

</androidx.constraintlayout.widget.ConstraintLayout>